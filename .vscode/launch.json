{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug AArch64 (CodeLLDB)",
            "type": "lldb",
            "request": "launch", 
            "program": "${workspaceFolder}/input/main",
            "args": [],
            "stopOnEntry": true,
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust",
            "cargo": {
                "args": ["build", "--manifest-path", "${workspaceFolder}/Cargo.toml"]
            },
            "args": ["-i", "./input/hello_world.c", "--dump-ir"]
        }
    ]
}